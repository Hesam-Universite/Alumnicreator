{% extends 'frontend/layout.html.twig' %}

{% block title %}Ma page sur l'annuaire | Alumni Creator{% endblock %}

{% block content %}
    <div class="container breadcrumb">
        <p><a href="{{ path('homepage') }}">Accueil</a> > <a href="{{ path('directory_index') }}">Annuaire</a> > <a class="breadcrumb--current" href="{{ path('directory_my_page') }}">Ma page</a></p>
    </div>
    <div class="container first-container">
        <div class="card-section">
            {{ form_start(form) }}
                <div class="row">
                    <div class="col-lg-6 mb-3">
                        <label for="inputPassword6" class="col-form-label">Prénom</label>
                        <input class="form-control" id="disabledInput" type="text" placeholder="{{ firstName }}" disabled>
                    </div>
                    <div class="col-lg-6 mb-3">
                        <label for="inputPassword6" class="col-form-label">Nom</label>
                        <input class="form-control" id="disabledInput" type="text" placeholder="{{ lastName }}" disabled>
                    </div>
                    <div class="col-lg-6 mb-3">
                        {{ form_label(form.class, null, {'label_attr':{'class':'form-label'}}) }}
                        {{ form_widget(form.class, {'attr':{'class':form.class.vars.errors|length ? 'form-control is-invalid':'form-control'}}) }}
                        {{ form_errors(form.class) }}
                    </div>
                    <div class="col-lg-6 mb-3">
                        {{ form_label(form.email, null, {'label_attr':{'class':'form-label'}}) }}
                        {{ form_widget(form.email, {'attr':{'class':form.email.vars.errors|length ? 'form-control is-invalid':'form-control'}}) }}
                        {{ form_errors(form.email) }}
                    </div>
                    <div class="col-lg-6 mb-3">
                        {{ form_label(form.linkedinLink, null, {'label_attr':{'class':'form-label'}}) }}
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon3">https://www.linkedin.com/in/</span>
                            </div>
                            {{ form_widget(form.linkedinLink, {'attr':{'class':form.linkedinLink.vars.errors|length ? 'form-control is-invalid':'form-control '}, 'id' : 'basic-url', 'aria-describedby' : 'basic-addon3'}) }}
                            {{ form_errors(form.linkedinLink) }}
                        </div>
                    </div>
                    <div class="d-flex justify-content-start mt-4">
                        <button class="btn btn-primary" type="submit">
                            {% if directoryPage.id is not empty %}Modifier{% else %}Envoyer{% endif %}
                        </button>
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
        <div class="mt-4">
            <a href="{{ path('contact', { object: 2 }) }}">Demander une modification du nom ou prénom</a>
        </div>
    </div>
{% endblock %}
