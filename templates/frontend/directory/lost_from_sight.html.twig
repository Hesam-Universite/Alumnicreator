{% extends 'frontend/layout.html.twig' %}

{% block title %}Annuaire | Alumni Creator{% endblock %}

{% block content %}
    <div class="container breadcrumb">
        <p><a href="{{ path('homepage') }}">Accueil</a> > <a href="{{ path('directory_index') }}">Annuaire</a> > <a class="breadcrumb--current" href="{{ path('directory_lost_from_sight') }}">Retrouver un ancien étudiant perdu de vue</a></p>
    </div>
    <div class="container mb-5">
        <div class="row justify-content-center">
            <div class="col-xl-8">
                <div class="card-section">
                    {{ form_start(form) }}
                        <div class="row">
                            <div class="col-xl-6">
                                {{ form_label(form.firstname, null, {'label_attr':{'class':'form-label'}}) }}
                                {{ form_widget(form.firstname, {'attr':{'class':form.firstname.vars.errors|length ? 'form-control is-invalid':'form-control'}}) }}
                                {{ form_errors(form.firstname) }}
                            </div>
                            <div class="col-xl-6">
                                {{ form_label(form.name, null, {'label_attr':{'class':'form-label'}}) }}
                                {{ form_widget(form.name, {'attr':{'class':form.name.vars.errors|length ? 'form-control is-invalid':'form-control'}}) }}
                                {{ form_errors(form.name) }}
                            </div>
                        </div>
                        <div class="row mb-4">
                            <div class="col-xl-6">
                                {{ form_label(form.class, null, {'label_attr':{'class':'form-label'}}) }}
                                {{ form_widget(form.class, {'attr':{'class':form.class.vars.errors|length ? 'form-control is-invalid':'form-control'}}) }}
                                {{ form_errors(form.class) }}
                            </div>
                        </div>
                        {{ include('frontend/_mention_form.html.twig') }}
                        <button type="submit" class="btn btn-primary">Envoyer</button>
                    {{ form_end(form) }}
                    <p class="mt-3 mb-0">En remplissant ce formulaire, vous pouvez demander à l'administrateur de la plateforme de retrouver un ancien étudiant perdu de vue pour qu'il apparaisse dans l'annuaire.</p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
