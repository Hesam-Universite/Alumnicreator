                </div>
                <div class="col-lg-6">
                    <div class="mb-3">
                        {{ form_label(form.remuneration, null, {'label_attr':{'class':'form-label'}}) }}
                        {{ form_widget(form.remuneration, {'attr':{'class':form.remuneration.vars.errors|length ? 'form-control is-invalid':'form-control'}}) }}
                        {{ form_errors(form.remuneration) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.description, null, {'label_attr':{'class':'form-label'}}) }}
                        {{ form_widget(form.description, {'attr':{'class':form.description.vars.errors|length ? 'form-control is-invalid':'form-control'}}) }}
                        {{ form_errors(form.description) }}
