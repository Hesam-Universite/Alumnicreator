                        {{ form_errors(form.activityArea) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.startDate, null, {'label_attr':{'class':'form-label'}}) }}
                        {{ form_widget(form.startDate, {'attr':{'class':form.startDate.vars.errors|length ? 'is-invalid':''}}) }}
                        {{ form_errors(form.startDate) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.deadlineJobOffer, null, {'label_attr':{'class':'form-label'}}) }}
