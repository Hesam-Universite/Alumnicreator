                        {{ form_errors(form.postalCode) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.city, null, {'label_attr':{'class':'form-label'}}) }}
                        {{ form_widget(form.city, {'attr':{'class':form.city.vars.errors|length ? 'form-control is-invalid':'form-control'}}) }}
                        {{ form_errors(form.city) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.attachmentFile, null, {'label_attr':{'class':'form-label'}}) }}
                        {{ form_widget(form.attachmentFile, {'attr':{'class':form.attachmentFile.vars.errors|length ? 'form-control is-invalid':'form-control'}}) }}
                        {{ form_errors(form.attachmentFile) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.typeOfContract, null) }}
                        {{ form_widget(form.typeOfContract) }}
                        {{ form_errors(form.typeOfContract) }}
