{% extends 'frontend/layout.html.twig' %}

{% block title %}Modifier une offre d'emploi | Alumni Creator{% endblock %}

{% block content %}
    <div class="container breadcrumb">
        <p><a href="{{ path('homepage') }}">Accueil</a> > <a href="{{ path('job_my') }}">Mes offres</a> > <a href="{{ path('job_edit', {'id': job.id}) }}" class="breadcrumb--current">Modifier l'offre {{ job.title }}</a></p>
    </div>
    <div class="container mb-5">
        {% for message in app.flashes('error') %}
            <div class="alert alert-success mb-3">
                <p class="text-center">{{ message }}</p>
            </div>
        {% endfor %}
        {{ form_start(form) }}
        <div class="card-section">
            <div class="row">
                <div class="col-lg-6">
                    <div class="mb-3">
                        {{ form_label(form.title, null, {'label_attr':{'class':'form-label'}}) }}
                        {{ form_widget(form.title, {'attr':{'class':form.title.vars.errors|length ? 'form-control is-invalid':'form-control'}}) }}
                        {{ form_errors(form.title) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.companyPresentation, null, {'label_attr':{'class':'form-label'}}) }}
                        {{ form_widget(form.companyPresentation, {'attr':{'class':form.companyPresentation.vars.errors|length ? 'form-control is-invalid':'form-control'}}) }}
                        {{ form_errors(form.companyPresentation) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.contactEmail, null, {'label_attr':{'class':'form-label'}}) }}
