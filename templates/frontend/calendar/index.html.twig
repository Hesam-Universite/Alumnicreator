{% extends 'frontend/layout.html.twig' %}

{% block title %}Agenda | Alumni Creator{% endblock %}

{% block content %}
    <style>
        .calendar a {
            color: {{ visual_configurations.getVisualConfigurations[0] }}!important;
        }

        .calendar .fc-h-event {
            background-color: {{ visual_configurations.getVisualConfigurations[1] }}!important;
            border: 1px solid {{ visual_configurations.getVisualConfigurations[1] }}!important;
        }

        .calendar .fc-button-primary {
            background-color: {{ visual_configurations.getVisualConfigurations[0] }}!important;
            border-color: {{ visual_configurations.getVisualConfigurations[0] }}!important;
        }
    </style>
    <div class="container breadcrumb">
        <p><a href="{{ path('homepage') }}">Accueil</a> > <a class="breadcrumb--current" href="{{ path('calendar_index') }}">Agenda</a></p>
    </div>
    <div class="container card-section calendar" {{ stimulus_controller('calendar', {events: events|serialize(format = 'json') }) }}>
        <div class="row">
            <div data-calendar-target="calendarEl">

            </div>
        </div>
    </div>
    <div class="container mt-4 mb-5">
        <a class="btn btn-primary-reverse btn-rounded" href="{{ path('calendar_download') }}" target="_blank"><p>Télécharger le calendrier </p> <i class="bi bi-chevron-right"></i></a>
    </div>
{% endblock %}
