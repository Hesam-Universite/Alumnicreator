{% extends 'frontend/layout.html.twig' %}

{% block title %}Formulaire de contact | Alumni Creator{% endblock %}

{% block content %}
    <div class="container breadcrumb">
        <p><a href="{{ path('homepage') }}">Accueil</a> > <a class="breadcrumb--current" href="{{ path('contact', {object: 1}) }}">Demande de contact</a></p>
    </div>
    <div class="container first-container">
        <div class="row justify-content-center">
            <div class="card-section col-xl-8">
                {{ form_start(form) }}
                    <div class="mb-3">
                        {{ form_label(form.email, null, {'label_attr':{'class':'form-label'}}) }}
                        {{ form_widget(form.email, {'attr':{'class':form.email.vars.errors|length ? 'form-control is-invalid':'form-control'}}) }}
                        {{ form_errors(form.email) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.object, null, {'label_attr':{'class':'form-label'}}) }}
                        {{ form_widget(form.object, {'attr':{'class':form.object.vars.errors|length ? 'form-control is-invalid':'form-control'}}) }}
                        {{ form_errors(form.object) }}
                    </div>
                    <div class="mb-4">
                        {{ form_label(form.message, null, {'label_attr':{'class':'form-label'}}) }}
                        {{ form_widget(form.message, {'attr':{'class':form.message.vars.errors|length ? 'form-control is-invalid':'form-control'}}) }}
                        {{ form_errors(form.message) }}
                    </div>
                    {{ include('frontend/_mention_form.html.twig') }}
                    <div class="col-lg-8">
                        <button type="submit" class="btn btn-primary">Envoyer</button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
