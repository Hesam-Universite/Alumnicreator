{% extends 'frontend/layout.html.twig' %}

{% block title %}Inscription - Entreprise | Alumni Creator{% endblock %}

{% block content %}
    <div class="container breadcrumb">
        <p><a href="{{ path('homepage') }}">Accueil</a> > <a href="{{ path('register_index') }}">Inscription</a> > <a class="breadcrumb--current" href="{{ path('register_company') }}">Inscription entreprise</a></p>
    </div>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-9">
                <div class="card-section mt-4 mb-5">
                    <div class="d-flex justify-content-center align-items-center flex-column" {{ stimulus_controller('activityarea') }}>
                        <div>
                            {{ form_start(form) }}
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="mb-3">
                                            {{ form_label(form.email, null, {'label_attr':{'class':'form-label'}}) }}
                                            {{ form_widget(form.email, {'attr':{'class':form.email.vars.errors|length ? 'form-control is-invalid':'form-control'}}) }}
                                            {{ form_errors(form.email) }}
                                        </div>

                                        <div class="mb-3">
                                            {{ form_label(form.plainPassword.first, null, {'label_attr':{'class':'form-label required'}}) }}
                                            {{ form_widget(form.plainPassword.first, {'attr':{'class':form.plainPassword.first.vars.errors|length ? 'form-control is-invalid':'form-control', 'required':'true'}}) }}
                                            {{ form_errors(form.plainPassword.first) }}
                                        </div>

                                        <div class="mb-3">
                                            {{ form_label(form.plainPassword.second, null, {'label_attr':{'class':'form-label required'}}) }}
                                            {{ form_widget(form.plainPassword.second, {'attr':{'class':form.plainPassword.second.vars.errors|length ? 'form-control is-invalid':'form-control', 'required':'true'}}) }}
                                            {{ form_errors(form.plainPassword.second) }}
                                        </div>

                                        <div class="mb-3">
                                            {{ form_label(form.name, null, {'label_attr':{'class':'form-label'}}) }}
                                            {{ form_widget(form.name, {'attr':{'class':form.name.vars.errors|length ? 'form-control is-invalid':'form-control'}}) }}
                                            {{ form_errors(form.name) }}
                                        </div>

                                        <div class="mb-3">
                                            {{ form_label(form.firstname, null, {'label_attr':{'class':'form-label'}}) }}
                                            {{ form_widget(form.firstname, {'attr':{'class':form.firstname.vars.errors|length ? 'form-control is-invalid':'form-control'}}) }}
                                            {{ form_errors(form.firstname) }}
                                        </div>

                                        <div class="mb-3">
                                            {{ form_label(form.activityArea, null, {'label_attr':{'class':'form-label'}}) }}
                                            {{ form_widget(form.activityArea, {'attr':{'class':form.activityArea.vars.errors|length ? 'form-control is-invalid':'form-control'}}) }}
                                            {{ form_errors(form.activityArea) }}
                                        </div>

                                        <div class="mb-3 d-none" data-activityarea-target="otherfield">
                                            {{ form_label(form.activityAreaOther, null, {'label_attr':{'class':'form-label'}}) }}
                                            {{ form_widget(form.activityAreaOther, {'attr':{'class':form.activityAreaOther.vars.errors|length ? 'form-control is-invalid':'form-control'}}) }}
                                            {{ form_errors(form.activityAreaOther) }}
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="mb-3">
                                            {{ form_label(form.phone, null, {'label_attr':{'class':'form-label'}}) }}
                                            {{ form_widget(form.phone, {'attr':{'class':form.phone.vars.errors|length ? 'form-control is-invalid':'form-control'}}) }}
                                            {{ form_errors(form.phone) }}
                                        </div>

                                        <div class="mb-3">
                                            {{ form_label(form.siret, null, {'label_attr':{'class':'form-label'}}) }}
                                            {{ form_widget(form.siret, {'attr':{'class':form.siret.vars.errors|length ? 'form-control is-invalid':'form-control'}}) }}
                                            {{ form_errors(form.siret) }}
                                        </div>

                                        <div class="mb-3">
                                            {{ form_label(form.companyName, null, {'label_attr':{'class':'form-label'}}) }}
                                            {{ form_widget(form.companyName, {'attr':{'class':form.companyName.vars.errors|length ? 'form-control is-invalid':'form-control'}}) }}
                                            {{ form_errors(form.companyName) }}
                                        </div>

                                        <div class="mb-3">
                                            {{ form_label(form.roleInTheCompany, null, {'label_attr':{'class':'form-label'}}) }}
                                            {{ form_widget(form.roleInTheCompany, {'attr':{'class':form.roleInTheCompany.vars.errors|length ? 'form-control is-invalid':'form-control'}}) }}
                                            {{ form_errors(form.roleInTheCompany) }}
                                        </div>

                                        <div class="mb-3">
                                            {{ form_label(form.companyAddress, null, {'label_attr':{'class':'form-label'}}) }}
                                            {{ form_widget(form.companyAddress, {'attr':{'class':form.companyAddress.vars.errors|length ? 'form-control is-invalid':'form-control'}}) }}
                                            {{ form_errors(form.companyAddress) }}
                                        </div>

                                        <div class="mb-3 agree-notifications">
                                            {{ form_widget(form.acceptedCandidacyNotification, {'attr':{'class':'float-start'}}) }}
                                            {{ form_label(form.acceptedCandidacyNotification) }}
                                            {{ form_errors(form.acceptedCandidacyNotification) }}
                                        </div>

                                        <div class="mb-3 agree-notifications">
                                            {{ form_widget(form.receiveMessageNotificationsByEmail, {'attr':{'class':'float-start'}}) }}
                                            {{ form_label(form.receiveMessageNotificationsByEmail) }}
                                            {{ form_errors(form.receiveMessageNotificationsByEmail) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-center">
                                    {{ include('frontend/_mention_form.html.twig') }}
                                </div>
                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary btn-rounded"><p>Inscription</p> <i class="bi bi-chevron-right"></i></button>
                                </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
