{% extends 'frontend/layout.html.twig' %}

{% block title %}Modifier mon compte | Alumni Creator{% endblock %}

{% block content %}
    <div class="container breadcrumb">
        <p><a href="{{ path('homepage') }}">Accueil</a> > <a href="{{ path('my_account') }}">Mon profil</a> > <a class="breadcrumb--current" href="{{ path('edit_my_account') }}">Modifier mon profil</a></p>
    </div>
    <div class="container card-section">
        {% if is_granted('ROLE_COMPANY') %}
            {{ form_start(form) }}
            <div class="row">
                <div class="col-lg-6">
                    <div class="mb-3">
                        {{ form_label(form.email, null, {'label_attr':{'class':'form-label'}}) }}
                        {{ form_widget(form.email, {'attr':{'class':form.email.vars.errors|length ? 'form-control is-invalid':'form-control'}}) }}
                        {{ form_errors(form.email) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.plainPassword, null, {'label_attr':{'class':'form-label'}}) }}
                        {{ form_widget(form.plainPassword, {'attr':{'class':form.plainPassword.vars.errors|length ? 'form-control is-invalid':'form-control'}}) }}
                        {{ form_errors(form.plainPassword) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.name, null, {'label_attr':{'class':'form-label'}}) }}
                        {{ form_widget(form.name, {'attr':{'class':form.name.vars.errors|length ? 'form-control is-invalid':'form-control'}}) }}
                        {{ form_errors(form.name) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.firstname, null, {'label_attr':{'class':'form-label'}}) }}
                        {{ form_widget(form.firstname, {'attr':{'class':form.firstname.vars.errors|length ? 'form-control is-invalid':'form-control'}}) }}
                        {{ form_errors(form.firstname) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.activityArea, null, {'label_attr':{'class':'form-label'}}) }}
                        {{ form_widget(form.activityArea, {'attr':{'class':form.activityArea.vars.errors|length ? 'form-control is-invalid':'form-control'}}) }}
                        {{ form_errors(form.activityArea) }}
                    </div>

                    <div class="mb-3 d-none" data-activityarea-target="otherfield">
                        {{ form_label(form.activityAreaOther, null, {'label_attr':{'class':'form-label'}}) }}
                        {{ form_widget(form.activityAreaOther, {'attr':{'class':form.activityAreaOther.vars.errors|length ? 'form-control is-invalid':'form-control'}}) }}
                        {{ form_errors(form.activityAreaOther) }}
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="mb-3">
                        {{ form_label(form.phone, null, {'label_attr':{'class':'form-label'}}) }}
                        {{ form_widget(form.phone, {'attr':{'class':form.phone.vars.errors|length ? 'form-control is-invalid':'form-control'}}) }}
                        {{ form_errors(form.phone) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.siret, null, {'label_attr':{'class':'form-label'}}) }}
                        {{ form_widget(form.siret, {'attr':{'class':form.siret.vars.errors|length ? 'form-control is-invalid':'form-control'}}) }}
                        {{ form_errors(form.siret) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.companyName, null, {'label_attr':{'class':'form-label'}}) }}
                        {{ form_widget(form.companyName, {'attr':{'class':form.companyName.vars.errors|length ? 'form-control is-invalid':'form-control'}}) }}
                        {{ form_errors(form.companyName) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.roleInTheCompany, null, {'label_attr':{'class':'form-label'}}) }}
                        {{ form_widget(form.roleInTheCompany, {'attr':{'class':form.roleInTheCompany.vars.errors|length ? 'form-control is-invalid':'form-control'}}) }}
                        {{ form_errors(form.roleInTheCompany) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.companyAddress, null, {'label_attr':{'class':'form-label'}}) }}
                        {{ form_widget(form.companyAddress, {'attr':{'class':form.companyAddress.vars.errors|length ? 'form-control is-invalid':'form-control'}}) }}
                        {{ form_errors(form.companyAddress) }}
                    </div>

                    <div class="mb-3 agree-notifications">
                        {{ form_widget(form.acceptedCandidacyNotification, {'attr':{'class':'float-start'}}) }}
                        {{ form_label(form.acceptedCandidacyNotification) }}
                        {{ form_errors(form.acceptedCandidacyNotification) }}
                    </div>

                    <div class="mb-3 agree-notifications">
                        {{ form_widget(form.receiveMessageNotificationsByEmail, {'attr':{'class':'float-start'}}) }}
                        {{ form_label(form.receiveMessageNotificationsByEmail) }}
                        {{ form_errors(form.receiveMessageNotificationsByEmail) }}
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-center">
                {{ include('frontend/_mention_form.html.twig') }}
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-lg btn-primary">Mettre à jour</button>
            </div>
            {{ form_end(form) }}
        {% else %}
            {{ form_start(form) }}
            <div class="row" {{ stimulus_controller('cities') }}>
                <div class="col-lg-6">
                    <div class="mb-3">
                        {{ form_label(form.email, null, {'label_attr':{'class':'form-label'}}) }}
                        {{ form_widget(form.email, {'attr':{'class':form.email.vars.errors|length ? 'form-control is-invalid':'form-control'}}) }}
                        {{ form_errors(form.email) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.plainPassword, null, {'label_attr':{'class':'form-label'}}) }}
                        {{ form_widget(form.plainPassword, {'attr':{'class':form.plainPassword.vars.errors|length ? 'form-control is-invalid':'form-control'}}) }}
                        {{ form_errors(form.plainPassword) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.firstname, null, {'label_attr':{'class':'form-label'}}) }}
                        {{ form_widget(form.firstname, {'attr':{'class':form.firstname.vars.errors|length ? 'form-control is-invalid':'form-control'}}) }}
                        {{ form_errors(form.firstname) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.name, null, {'label_attr':{'class':'form-label'}}) }}
                        {{ form_widget(form.name, {'attr':{'class':form.name.vars.errors|length ? 'form-control is-invalid':'form-control'}}) }}
                        {{ form_errors(form.name) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.phone, null, {'label_attr':{'class':'form-label'}}) }}
                        {{ form_widget(form.phone, {'attr':{'class':form.phone.vars.errors|length ? 'form-control is-invalid':'form-control'}}) }}
                        {{ form_errors(form.phone) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.linkedinLink, null, {'label_attr':{'class':'form-label'}}) }}
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon3">https://www.linkedin.com/in/</span>
                            </div>
                            {{ form_widget(form.linkedinLink, {'attr':{'class':form.linkedinLink.vars.errors|length ? 'form-control is-invalid':'form-control '}, 'id' : 'basic-url', 'aria-describedby' : 'basic-addon3'}) }}
                            {{ form_errors(form.linkedinLink) }}
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.pictureFile, null, {'label_attr':{'class':'form-label'}}) }}
                        {{ form_widget(form.pictureFile, {'attr':{'class':form.pictureFile.vars.errors|length ? 'form-control is-invalid':'form-control'}}) }}
                        {{ form_errors(form.pictureFile) }}
                    </div>
                </div>
                <div class="col-lg-6">
                    {% if is_granted('ROLE_STUDENT') %}
                        <div class="mb-3">
                            {{ form_label(form.class, null, {'label_attr':{'class':'form-label'}}) }}
                            {{ form_widget(form.class, {'attr':{'class':form.class.vars.errors|length ? 'form-control is-invalid':'form-control'}}) }}
                            {{ form_errors(form.class) }}
                        </div>
                    {% endif %}

                    <div class="mb-3 d-none" data-register-target="status">
                        {{ form_label(form.status, null, {'label_attr':{'class':'form-label'}}) }}
                        {{ form_widget(form.status, {'attr':{'class':form.status.vars.errors|length ? 'form-control is-invalid':'form-control'}}) }}
                        {{ form_errors(form.status) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.address, null, {'label_attr':{'class':'form-label'}}) }}
                        {{ form_widget(form.address, {'attr':{'class':form.address.vars.errors|length ? 'form-control is-invalid':'form-control'}}) }}
                        {{ form_errors(form.address) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.postalCode, null, {'label_attr':{'class':'form-label'}}) }}
                        {{ form_widget(form.postalCode, {'attr':{'class':form.postalCode.vars.errors|length ? 'form-control is-invalid':'form-control'}}) }}
                        {{ form_errors(form.postalCode) }}
                    </div>

                    {{ form_row(form.city) }}

                    <div class="mb-3">
                        <label class="form-label col-form-label col-sm-2 required" for="student_city">Ville</label>
                        <select id="student_city" data-cities-target="selectcities" class="form-control form-select">
                            <option>{{ app.user.city }}</option>
                        </select>
                    </div>

                    {% if is_granted('ROLE_STUDENT') %}
                        <div class="mb-3">
                            {{ form_label(form.training, null, {'label_attr':{'class':'form-label'}}) }}
                            {{ form_widget(form.training, {'attr':{'class':form.training.vars.errors|length ? 'form-control is-invalid':'form-control'}}) }}
                            {{ form_errors(form.training) }}
                        </div>
                    {% endif %}

                    <div class="mb-3">
                        {{ form_label(form.personalLink, null, {'label_attr':{'class':'form-label'}}) }}
                        {{ form_widget(form.personalLink, {'attr':{'class':form.personalLink.vars.errors|length ? 'form-control is-invalid':'form-control'}}) }}
                        {{ form_errors(form.personalLink) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.birthday, null, {'label_attr':{'class':'form-label'}}) }}
                        {{ form_widget(form.birthday, {'attr':{'class':form.birthday.vars.errors|length ? 'form-control is-invalid':'form-control'}}) }}
                        {{ form_errors(form.birthday) }}
                    </div>

                    {% if is_granted('ROLE_STUDENT') %}
                        <div class="mb-3 agree-notifications">
                            {{ form_widget(form.acceptedNotifications, {'attr':{'class':'float-start'}}) }}
                            {{ form_label(form.acceptedNotifications) }}
                            {{ form_errors(form.acceptedNotifications) }}
                        </div>
                    {% endif %}

                    <div class="mb-3 agree-notifications">
                        {{ form_widget(form.receiveMessageNotificationsByEmail, {'attr':{'class':'float-start'}}) }}
                        {{ form_label(form.receiveMessageNotificationsByEmail) }}
                        {{ form_errors(form.receiveMessageNotificationsByEmail) }}
                    </div>
                </div>
                <div class="d-flex justify-content-center">
                    {{ include('frontend/_mention_form.html.twig') }}
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-lg btn-primary">Mettre à jour</button>
                </div>
            </div>
            {{ form_end(form) }}
        {% endif %}
    </div>
    <div class="container mt-3 mb-5">
        <a class="custom-link" href="{{ path('contact', {object: 3}) }}">Je souhaite supprimer mon compte</a>
    </div>
{% endblock %}
