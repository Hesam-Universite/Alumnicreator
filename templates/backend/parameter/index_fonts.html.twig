{% extends 'backend/layout.html.twig' %}

{% block title %}Toutes les polices personnalisées{% endblock %}

{% block header_actions %}
    <a href="{{ path('admin_parameters_new_font') }}" class="btn btn-success"> Nouvelle police</a>
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            {% if fonts %}
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Nom</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for font in fonts %}
                            <tr>
                                <td>{{ font.name }}</td>
                                <td><a class="btn btn-danger" href="{{ path('admin_parameters_delete_font', { id: font.id }) }}">Supprimer</a></td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <p class="text-center">Vous pouvez ajouter des polices personnalisées grâce au bouton ci-dessus</p>
            {% endif %}
        </div>
    </div>
{% endblock %}
